<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_app_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_header_bg">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/white_text_color"
        android:layout_marginTop="@dimen/top_navigation_bar_padding">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="198dp"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_icon_header" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:background="@color/app_header_bg"/>

</RelativeLayout>